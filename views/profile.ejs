  <script
  src="https://code.jquery.com/jquery-3.3.1.min.js"
  integrity="sha256-FgpCb/KJQlLNfOu91ta32o/NMZxltwRo8QtmkMRdAu8="
  crossorigin="anonymous"></script>
  <link href="https://fonts.googleapis.com/css?family=Lato:100,300,400,700,900" rel="stylesheet">
  <script defer src="https://use.fontawesome.com/releases/v5.0.8/js/all.js"
  integrity="sha384-SlE991lGASHoBfWbelyBPLsUlwY1GwNDJo3jSJO04KZ33K2bwfV9YBauFfnzvynJ"
  crossorigin="anonymous"></script>
  <style>
  body{
  margin: 0;
  padding:0;
  font-family: "Lato",sans-serif;
  background: #f1f1f1;
}

  .header-main{
  width: 100%;
height: 20vh;
  }

  nav {
  width :100%;
  height:80px;
  background-color:rgba(0, 0, 0,0.850);
  line-height: 50px;
  position: fixed;
  z-index: 100;

  }

  nav ul {
  float:right;
  margin-right: 30px;
  }
  nav ul li {
  list-style-type: none;
  display: inline-block;
  transition: 0.8s all;
  }
  nav ul li:hover{
  background-color: #29a719;
  }
  nav ul li a {
  text-decoration: none;
  padding:30px;
  color:white;
  }
  .footer {
  height:70px;
  width:100%;
  background-color: rgba(0, 0, 0,0.899);
  color: white;
  text-align: center;
  bottom:0;
  }

  .main{
    position: relative;
    top:50%;
    padding-bottom: 74px;
    padding-left:450px;
  }

  .main ul {
    width:450px;

  }

  .main ul li {
    list-style-type: none;
    padding:20px;
    color: black;
      transition: 0.8s all;

  }
.main ul li:hover{
  background-color: #EDEAE9;
  cursor:pointer;
  }
  .main ul li a {
    text-decoration: none;
    color:black;
    font-size:44px;
    padding-left:20px;
  }

  .footer h2 {
  padding-top: 20px;
  }
  .user_created{
    position: relative;
    width:500px;
    height: 50px;
    background-color: #DDDDDD;
    text-align: center;
    border-radius: 5px;
    color: green;
    left:30%;
  }
  .user_created h2{
  padding: 10px;
  }
  .user_deleted{
    position: relative;
    width:500px;
    height: 50px;
    background-color: #DDDDDD;
    text-align: center;
    border-radius: 5px;
    color: green;
    left:30%;
  }
  .user_deleted h2{
    padding: 10px;
  }
  </style>
</head>
<body>

  <div class="header-main">
   <nav>
       <img src="images/logo.png" width="200" height="80" >
       <ul>
           <li><a href="/adminlogin/updatepassword">Update Password</a></li>
           <li><a href="/">Logout</a></li>
       </ul>
   </nav>
  </div>
  <%if (typeof message != 'undefined') { %>
    <div class="user_created"><h2>User created successfully</h2></div>
    <% } %>
    <%if (typeof new_message != 'undefined') { %>
    <div  class="user_deleted"><h2>User deleted successfully</h2></div>
    <% } %>
  <div class="main">
    <ul>
        <li><i class="fas fa-user-plus fa-3x"></i><a href="/employee">Add a user</a></li>
      <li><i class="fas fa-user-times fa-3x "></i><a href="/adminlogin/removeuser">Remove a user</a></li>


        <li><i class="fas fa-list-ul fa-3x"></i></span><a href="/allusers">List all users</a></li>
  </ul>
  </div>

    <br><br>

<div class="footer">
                <span><h2>@PROTSAHAN</h2></span>
            </div>

<script>

setTimeout(function() {
    $('.user_created').fadeOut('fast');
    $('.user_deleted').fadeOut('fast');
}, 2000);

</script>

</body>
</html>
