  <style>

  body{
   margin: 0;
   padding:0;
   font-family: "Lato",sans-serif;
   background: #f1f1f1;

}


.header-main{
   width: 100%;
   height: 13.75vh;
}

nav {
   width :100%;
   height:80px;
   background-color:rgba(0, 0, 0,0.850);
   line-height: 50px;
   position: fixed;
   z-index: 100;

}

nav ul {
   float:right;
   margin-right: 30px;
}
nav ul li {
   list-style-type: none;
   display: inline-block;
   transition: 0.8s all;
}
nav ul li:hover{
   background-color: #29a719;

}

nav ul li a {
   text-decoration: none;
   padding:30px;
   color:white;
}

.fas fa-bell fa-lg:hover{
   padding-right: 10px;
}

.container{
  position: relative;
  width:700px;
  left:25%;

}
.adduser {
    border-radius: 5px;
    background-color: #f2f2f2;
    padding: 20px;
}

.adduser label {
  text-transform: uppercase;
  font-weight: 700;
  font-size: 22px;
}
input[type=text], select {
    width: 100%;
    padding: 12px 20px;
    margin: 8px 0;
    display: inline-block;
    border: 1px solid #ccc;
    border-radius: 4px;
    box-sizing: border-box;
    font-size: 18px;
    font-weight: 700;

}

input[type=email], select {
    width: 100%;
    padding: 12px 20px;
    margin: 8px 0;
    display: inline-block;
    border: 1px solid #ccc;
    border-radius: 4px;
    box-sizing: border-box;
    font-weight: 700;
    font-size: 18px;

}

input[type=submit] {
    width: 20%;
    background-color: #4CAF50;
    color: white;
    padding: 14px 20px;
    margin: 8px 0;
    border: none;
    border-radius: 4px;
    cursor: pointer;
}

input[type=submit]:hover {
    background-color: #45a049;
}


.footer {
   height:70px;
   width:100%;
   background-color: rgba(0, 0, 0,0.899);
   color: white;
   text-align: center;
   bottom: 0;
}
.footer h2 {
   padding-top: 20px;
}
</style>
</head>

<body>

  <div class="header-main">
          <nav>
              <img src="images/logo.png" width="200" height="80" >
              <ul>
                  <li><a href="/profile">Home</a></li>
                  <li><a href="/">Logout</a></li>
              </ul>
          </nav>
      </div>
<div class="container">
  <div class="adduser">
    <form action="/adminlogin/adduser" method="post">
      <label for="username">Name of new user</label>
      <input type="text" id="username" name="username" placeholder="Enter user's name">

      <label for="email">Email</label>
      <input type="email" id="email" name="email" placeholder="Enter user's email">

      <label for="department">Department</label>
      <select id="state" name="department">
      <option value="">Select user's department</option>
        <option value="TRIFED">TRIFED</option>
        <option value="NSTFDC">NSTFDC</option>
        <option value="MoTA">MoTA</option>
      </select>

      <label for="state">State</label>
      <select id="state" name="state">
      <option value="">Select user's state</option>
        <option value="assam">Assam</option>
        <option value="chattisgarh">Chattisgarh</option>
        <option value="orissa">Orissa</option>
        <option value="orissa">Kerala</option>
        <option value="orissa">Madhya Pradesh</option>
        <option value="orissa">Gujarat</option>
        <option value="orissa">Pondicherry</option>
        <option value="orissa">Manipur</option>
      </select>

      <input type="submit" value="Add" >
    </form>
  </div>
</div>

<div class="footer">
               <span><h2>@PROTSAHAN</h2></span>
           </div>
</body>
</html>
